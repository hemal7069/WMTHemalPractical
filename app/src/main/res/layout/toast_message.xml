<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/llToastLayout"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_margin"
    android:background="@drawable/ic_curved_background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/padding_margin">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_caption_regular"
        tools:text="This is a toast message string." />
</LinearLayout>